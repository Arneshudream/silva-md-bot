{
  "name": "silva-md",
  "description": "Javascript WhatsApp bot made by Silva.",
  "logo": "https://files.catbox.moe/5uli5p.jpeg",
  "keywords": ["silva-md", "whatsapp", "baileys", "bot"],
  "success_url": "/",
  "stack": "heroku-24",
  "env": {
    "SESSION_ID": {
      "description": "Put your session ID here.",
      "required": true,
      "value": ""
    },
    "PREFIX": {
      "description": "Bot command prefix.",
      "required": false,
      "value": "."
    },
    "BOT_NAME": {
      "description": "Bot display name.",
      "required": false,
      "value": "✦ Silva ✦ MD ✦"
    },
    "AUTO_STATUS_REACT": {
      "description": "Enable auto status reactions.",
      "required": false,
      "value": "true"
    },
    "CUSTOM_REACT_EMOJIS": {
      "description": "Custom emojis for reactions (comma-separated).",
      "required": false,
      "value": "💝,💖,💗,❤️‍🔥,❤️‍🩹,❤️,🩷,🧡,💛,💚,💙,🩵,💜,🤎,🖤,🩶,🤍"
    },
    "DELETE_LINKS": {
      "description": "Remove links from group without removing members.",
      "required": false,
      "value": "false"
    },
    "OWNER_NUMBER": {
      "description": "Owner WhatsApp number.",
      "required": false,
      "value": "254700143167"
    },
    "OWNER_NAME": {
      "description": "Bot owner name.",
      "required": false,
      "value": "✦ Silva ✦ MD ✦"
    },
    "DESCRIPTION": {
      "description": "Bot description / branding.",
      "required": false,
      "value": "*© ✦ Silva ✦ MD ✦*"
    },
    "ALIVE_IMG": {
      "description": "Image URL for alive message.",
      "required": false,
      "value": "https://files.catbox.moe/5uli5p.jpeg"
    },
    "LIVE_MSG": {
      "description": "Alive message text.",
      "required": false,
      "value": "> SILVA MD IS ACTIVE ⚡"
    },
    "READ_MESSAGE": {
      "description": "Mark incoming messages as read.",
      "required": false,
      "value": "false"
    },
    "AUTO_REACT_NEWSLETTER": {
      "description": "Enable auto reaction to newsletter messages.",
      "required": false,
      "value": "true"
    },
    "ANTI_BAD": {
      "description": "Enable anti-bad word filter.",
      "required": false,
      "value": "false"
    },
    "AUTO_STATUS_SEEN": {
      "description": "Automatically view status updates.",
      "required": false,
      "value": "true"
    },
    "AUTO_STATUS_REPLY": {
      "description": "Reply automatically to viewed statuses.",
      "required": false,
      "value": "true"
    },
    "AUTO_STATUS_MSG": {
      "description": "Message sent when replying to statuses.",
      "required": false,
      "value": "*👀 Seen by Silva MD ✅*"
    },
    "MODE": {
      "description": "Bot mode: both, public, or private.",
      "required": false,
      "value": "both"
    },
    "ALWAYS_ONLINE": {
      "description": "Keep bot always online.",
      "required": false,
      "value": "true"
    },
    "AUTO_TYPING": {
      "description": "Enable typing simulation.",
      "required": false,
      "value": "true"
    },
    "AUTO_RECORDING": {
      "description": "Enable recording simulation.",
      "required": false,
      "value": "false"
    },
    "ANTIDELETE_GROUP": {
      "description": "Restore deleted messages in groups.",
      "required": false,
      "value": "true"
    },
    "ANTIDELETE_PRIVATE": {
      "description": "Restore deleted messages in private chat.",
      "required": false,
      "value": "true"
    },
    "DEBUG": {
      "description": "Enable debug logs.",
      "required": false,
      "value": "true"
    }
  },
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    },
    {
      "url": "https://github.com/DuckyTeam/heroku-buildpack-imagemagick.git"
    }
  ]
}
